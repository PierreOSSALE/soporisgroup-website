// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enum pour les rôles utilisateurs
enum UserRole {
  user
  assistant
  admin
}

// Enum pour les statuts de projets
enum ProjectStatus {
  draft
  published
  archived
}

// Enum pour les statuts de rendez-vous
enum AppointmentStatus {
  pending
  confirmed
  cancelled
  completed
}

// Modèle utilisateur
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  image        String?
  role         UserRole @default(user)
  isActive     Boolean  @default(true) @map("is_active")
  supabaseId   String?  @unique @map("supabase_id")
  lastLoginAt  DateTime? @map("last_login_at")
  joinedDate   DateTime @default(now()) @map("joined_date")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("users")
}

// Modèle auteur pour les articles de blog
model Author {
  id        String    @id @default(cuid())
  name      String
  avatar    String
  blogPosts BlogPost[]

  @@map("authors")
}
model Comment {
  id        String   @id @default(cuid())
  postId    String
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  author    String
  email     String
  content   String   @db.Text
  approved  Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("comments")
}

// Modèle article de blog (remplace BlogArticle)
model BlogPost {
  id              String   @id @default(cuid())
  slug            String   @unique
  title           String
  excerpt         String
  content         String   @db.Text
  category        String
  image           String
  readTime        Int      @default(5) @map("read_time")
  views           Int      @default(0)
  published       Boolean  @default(false)
  publishedAt     DateTime @map("published_at")
  comments Comment[]

  tableOfContents Json     @map("table_of_contents")
  authorId        String
  author          Author   @relation(fields: [authorId], references: [id])
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("blog_posts")
}

model FAQ {
  id         String   @id @default(uuid())
  question   String
  answer     String   @db.Text
  category   String
  order      Int      @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("faqs")
}

model Project {
  id           String        @id @default(uuid())
  title        String
  subtitle     String
  slug         String        @unique
  category     String
  client       String
  duration     String
  pack         String
  year         String
  status       ProjectStatus @default(draft)
  imageUrl     String?       @map("image_url")
  featured     Boolean       @default(false)
  description  String?       @db.Text
  challenges   Json?         // Pour stocker les défis (string[])
  solutions    Json?         // Pour stocker les solutions (string[])
  screenshots  Json?         // Pour stocker les captures d'écran (ProjectScreenshot[])
  technologies Json?         // Pour stocker les technologies (string[])
  results      Json?         // Pour stocker les résultats (string[])
  testimonial  Json?         // Pour stocker le témoignage ({ quote, author, role })
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  @@map("projects")
}

model Service {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  icon        String
  price       String
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  features    String[]
  slug        String   @unique
  color       String?  @default("#3B82F6")
  imageUrl    String?  @map("image_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("services")
}

model Pack {
  id                String    @id @default(uuid())
  name              String
  description       String    @db.Text
  
  // Prix Zone Europe
  priceEUR          Float?    @map("price_eur")
  originalPriceEUR  Float?    @map("original_price_eur")
  
  // Prix Zone Tunisie
  priceTND          Float?    @map("price_tnd")
  originalPriceTND  Float?    @map("original_price_tnd")
  
  // Prix Zone Afrique (FCFA)
  priceCFA          Float?    @map("price_cfa")
  originalPriceCFA  Float?    @map("original_price_cfa")

  features          String[]
  isPopular         Boolean   @default(false) @map("is_popular")
  isPromo           Boolean   @default(false) @map("is_promo")
  promoLabel        String?   @map("promo_label")
  promoEndDate      DateTime? @map("promo_end_date")
  promoEndDateTND   DateTime? @map("promo_end_date_tnd")
  promoEndDateCFA   DateTime? @map("promo_end_date_cfa")
  isActive          Boolean   @default(true) @map("is_active")
  order             Int       @default(0)
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  @@map("packs")
}

model Testimonial {
  id        String   @id @default(uuid())
  author    String
  role      String
  company   String
  content   String   @db.Text
  rating    Int
  avatar    String?
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("testimonials")
}

model Appointment {
  id         String   @id @default(uuid())
  name       String
  email      String
  phone      String?
  company    String?
  service    String
  date       DateTime @db.Date
  timeSlot   String   @map("time_slot")
  message    String?  @db.Text
  status     AppointmentStatus @default(pending)
  cancellation_token String?          @unique
  reminder_sent      Boolean          @default(false)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("appointments")
}

model Message {
  id         String   @id @default(uuid())
  name       String
  email      String
  phone      String?
  subject    String
  message    String   @db.Text
  isRead     Boolean  @default(false) @map("is_read")
  isArchived Boolean  @default(false) @map("is_archived")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("messages")
}

model TimeSlot {
  id              String   @id @default(uuid())
  day_of_week     Int
  start_time      String
  end_time        String
  duration_minutes Int
  is_active       Boolean  @default(true)
  created_at      DateTime @default(now()) @map("created_at")
  updated_at      DateTime @updatedAt @map("updated_at")

  @@map("time_slots")
}

model BlockedDate {
  id         String   @id @default(uuid())
  date       String   @unique
  reason     String?
  created_at DateTime @default(now()) @map("created_at")

  @@map("blocked_dates")
}